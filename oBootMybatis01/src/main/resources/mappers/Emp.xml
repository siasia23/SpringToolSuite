<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oracle.oBootMybatis01.EmpMapper">

	<select id="empTotal" resultType="int">
		SELECT Count(*) FROM EMP
	</select>
	
	<select id="siaEmpList" parameterType="int" resultType="Emp">
	
		select *
		from (
			
			select rownum rn, a.*
			from (select * 
					from emp 
					order by empno) a
			
		)
		where rn between #{start} and #{end}
		
	</select>
	
<!-- 	

	쿼리문에 부등호가 들어가면 태그 뚜껑으로 인식되므로, 뚜껑이 아님을 표기해줘야함.
	쿼리 시작 전에 			<![CDATA[	 				
	쿼리 끝난 후에 								]]>		
	
	<select id="siaEmpList3" parameterType="int" resultType="Emp">
	
		<![CDATA[		
		
			select *
			from (
				
				select rownum rn, a.*
				from (select * 
						from emp 
						order by empno) a
				
			)
			where 	rn >= #{start} 
				and 	rn <= #{end}
				
		]]>	
		
	</select>
 -->
 
	<select id="siaDetailEmp" parameterType="int" resultType="Emp">
	
		select * 
		from EMP 
		where empno = #{empno}
		
	</select>
	
	<update id="siaEmpUpdate" parameterType="Emp">
		
		update emp
		set 	ename = #{ename}, 
				job = #{job}, 
				mgr = #{mgr},
				hiredate = #{hiredate},
				sal = #{sal},
				<if test="#{comm} != null">comm = #{comm},</if>
				deptno = #{deptno}
		where empno = #{empno}
		
	</update>
	
	<select id="siaSelectManager"  resultType="Emp">
	
		SELECT *
		FROM emp
		WHERE empno IN (SELECT mgr
                					FROM emp)
	
	</select>
	
	<insert id="siaEmpInsert" parameterType="Emp">
	
		insert 
		into emp
		values (#{empno}, #{ename}, #{job}, #{mgr}, #{hiredate}, #{sal}, #{comm}, #{deptno})
	
	</insert>
	
	<delete id="siaEmpDelete" parameterType="int">
		
		delete 
		from emp
		where empno = #{empno}
		
	</delete>

	<!-- 검색결과 양이 적어서 1페이지 이내일 때는 페이지 작업 필요 없음 -->	
	<select id="siaEmpSearchList3" parameterType="Emp" resultType="Emp">
	
		select *
		from emp
		
		<choose>
		
			<when test="search == 's_job'">
				where job like '%' || #{keyword} || '%'
			</when>
			
			<when test="search == 's_ename'">
				where ename like '%' || #{keyword} || '%'
			</when>
			
			<otherwise>
				where job like '%'
			</otherwise>
		
		</choose>
	
	</select>
	
<!-- 	검색 결과가 2페이지 이상일 때는 페이지 작업 필요함

	<select id="siaEmpSearchList3" parameterType="Emp" resultType="Emp">
	
		select *
		from (
			
			select rownum rn, a.*
			from (select * 
					from emp 
					
					<choose>
		
					<when test="search == 's_job'">
						where job like '%' || #{keyword} || '%'
					</when>
					
					<when test="search == 's_ename'">
						where ename like '%' || #{keyword} || '%'
					</when>
					
					<otherwise>
						where job like '%'
					</otherwise>
		
					</choose>

					order by empno) a
			
		)
		where rn between #{start} and #{end}
	
	</select>
-->

	<select id="siaCondTotalEmp" parameterType="Emp" resultType="int">
	
		select count(*)
		from emp

		<choose>
		
			<when test="search == 's_job'">
				where job like '%' || #{keyword} || '%'
			</when>
			
			<when test="search == 's_ename'">
				where ename like '%' || #{keyword} || '%'
			</when>
			
			<otherwise>
				where job like '%'
			</otherwise>
		
		</choose>
	
	</select>
	
</mapper>